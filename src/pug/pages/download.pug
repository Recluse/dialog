extends ../global/layout
include ../mixins/svg
include ../mixins/button
include ../mixins/button-play
include ../mixins/picture
include ../mixins/form
include ../mixins/download

block variables
  -
    const lang = "ru";
    const title = "Dialog";
    const routeClass = "js-route-main";


block content

  section.hero.hero--download.box--lilac
    +hero({
      id: "macos",
      title: "macOS",
      text: "Работает на macOS 10.10 (Yosemite) и выше",
      link: "/",
      buttonText:'скачать'
    })
    +hero({
      id: "windows",
      title: "Windows",
      text: "Работает на Windows 8 и выше",
      link: "/",
      buttonText:'скачать'
    })
    +hero({
      id: "linux",
      title: "Linux",
      text: "Работает на Linux 4.6.x и выше ",
      link: "/",
      buttonText:'скачать'
    })
    +hero({
      id: "ios",
      title: "iOS",
      text: "Работает на iOS 8.1 и выше",
      link: "/",
      buttonText:'Скачать с App Store',
      icon: 'apple'
    })
    +hero({
      id: "android",
      title: "Android",
      text: "Работает на Android 8.1 и выше",
      link: "/",
      buttonText:'Скачать из Google Play',
      icon: 'google-play'
    })

  section.download
    .wrapper.wrapper--main
      .wrap.wrap--cards
        +col({
          id: 'windows',
          title: 'Скачать для Windows',
          iconName: 'windows',
          link: '/',
          select: ['.exe', '.msi'],
        })
        +col({
          id: 'macos',
          title: 'Скачать для macOS',
          iconName: 'macos',
          select: ['.deb', '.deb x86', '.rpm x86', '.rpm'],
          link: '/',
        })
        +col({
          id: 'linux',
          title: 'Скачать для Linux',
          iconName: 'linux',
          link: '/',
          select: ['.deb', '.deb x86', '.rpm x86', '.rpm'],
        })
        +col({
          id: 'ios',
          title: 'Скачать для iOS',
          iconName: 'ios',
          qrName: 'ios',
          link: '/',
        })
        +col({
          id: 'android',
          title: 'Скачать для Android',
          qrName: 'android',
          iconName: 'android',
          link: '/',
        })
        +col({
          id: 'web',
          title: 'Открыть Web версию',
          iconName: 'chrome',
          link: '/',
          isNoInstruction: true,
          isButton: true
        })